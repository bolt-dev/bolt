*.dtd           text eol=lf
*.htm           text eol=lf
*.html          text eol=lf
*.ini           text eol=lf
*.inc           text eol=lf
*.ics           text eol=crlf
*.java          text eol=lf
*.json          text eol=lf
*.jsp           text eol=lf
*.jspf          text eol=lf
*.manifest      text eol=lf
*.mn            text eol=lf
*.php           text eol=lf
*.properties    text eol=lf
*.py            text eol=lf
*.rdf           text eol=lf
*.sql           text eol=lf
*.svg           text eol=lf
*.tld           text eol=lf
*.txt           text eol=lf
*.xml           text eol=lf
*.xhtml         text eol=lf
*.xpm           text eol=lf
*.xul           text eol=lf


# Source Code files
# C Sharp
*.cs text eol=native diff=csharp

# C/C++
*.c text eol=lf
*.cc text eol=lf
*.cpp text eol=lf
*.h text eol=lf
*.hh text eol=lf
*.idl text eol=lf
*.inc text eol=lf

# Javascript
*.js            text eol=lf
*.sjs           text eol=lf
